{
	"manifest_version": 2,

	"name": "FastReader for Chrome",
	"description": "Read all you want faster with fastreader for Google Chrome!",
	"version": "1.0",

	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*", "file:///*"],
			"css": ["css/content.css"],
			"js": ["js/content.js"],
			"all_frames": true
		}
	],
	"permissions": [
		"storage",
		"activeTab",
		"contextMenus",
		"fontSettings"
	],
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"browser_action": {
		"default_icon": {
			"19": "icons/icon19.png",
			"38": "icons/icon38.png"
		},
		"default_title": "Read with FastReader",
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": ["js/background.js"],
		"persistent": false
	}
}